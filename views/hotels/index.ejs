<% layout( "layout/boilerplate" ) %>

<div id="cluster-map" class="mb-3 rounded-pill" ></div>


<%- include( "../partials/flash" ) %>
<div>
  <h2 class="display-3 border border rounded-pill" style="text-align: center;">All Hotel/Resorts:</h2>
</div>
<% for( let hotel of hotels ){ %>
<div class="card mb-3 border-dark rounded-3">
  <div class="row">
    <div class="col-md-4">
      <img src="<% if(hotel.images.length > 0){ %><%= hotel.images[0].url%><% } %> " class="img-fluid" alt=""
        srcset="" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <a href="/hotels/<%= hotel._id %>">
          <h5 class="card-title"><%= hotel.title %></h5>
        </a>
        <p class="card-text text-dark"><%= hotel.description %></p>
        <p class="card-text">
          <small class="text-muted"> <%= hotel.loaction %> </small>
        </p>
        <a href="/hotels/<%= hotel._id %>" class="btn btn-primary">View <%= hotel.title %>
        </a>
      </div>
    </div>
  </div>
</div>
<% } %>


<script>
  const mapToken = '<%= process.env.MAPBOX_TOKEN %>'
  const hotels = { features: <%- JSON.stringify( hotels )  %>};
</script>

<script src="./clusterMap.js"></script>